cat > /etc/chef/client.rb << EOF
log_level        :info
log_location     STDOUT
chef_server_url  'https://colochef.barcapint.com/'
validation_client_name 'chef-validator'
node_name "$hostname"
EOF

export BUILD_ENVIRONMENT=1
chef-client


